@import 'nib'

body
  font-family: Helvetica, arial, freesans, clean, sans-serif
  line-height: 1.4
  background-color: #f2f2f2
  margin: 0

.ui.grid
  .column
    margin-top: 0

.vis-hide
  visibility: hidden

#percentage
  span.vote-color
    display: inline-block
  .percent-green
    background-color: green
    opacity: 0.75
  .percent-red
    background-color: red
    opacity: 0.75
  .percent-blue
    background-color: #6ECFF5
    opacity: 0.75
  .percent-none
    background-color: grey


#main
  background-color: white
  padding: 0
  min-height: 1000px
  #header-menu
    .ui.breadcrumb
      .divider
        color: #eeeeee
        padding: 0 10px
    border-radius: 0
    .breadcrumb-item
      padding-right: 0
    .input-item
      width: 80%
    input
      background-color: transparent
      color: white
      border: none
      padding-left: 0
      padding-top: 3px
    .menu-item-without-separator
      padding-left: 0
      &:before
        display: none
    margin-bottom: 0
    i
      color: white
  #project-desc
    margin: 20px 40px
    textarea
      height: 20px
      padding: 5px 15px
      margin-bottom: 3px
      resize: none
      width: 100%
      font-size: 1em
      color: rgba(0,0,0,0.7)
      border: none
      background-color: transparent
  #new-item-input
    margin: 0 35px
    margin-bottom: 30px
    input
      border: none
      border-radius: 0
      border-bottom: 1px solid #aaaaaa
  #percentage
    line-height: 12px
  #list
    margin: 0px 30px
    padding-bottom: 100px
    .row
      height: 40px
      border: 1px transparent solid
    .row.focused
      border: 1px red solid
    .segment.even
      background-color: rgba(0,0,0, 0.005)
    .segment
      margin: 0
      padding: 0
      .icon-col
        padding: 0
        width: 1%
        .status-icon
          cursor: pointer
        .drag-icon
          cursor: -moz-grab
          cursor: -webkit-grab
      .input-col
        padding-left: 0
      .column
        .ellipsis.vertical.icon
          cursor: -moz-grab
          cursor: -webkit-grab
        .trash.icon
          cursor: pointer
        margin: 0
      .yellow.corner
        border-color: yellow
      textarea
        height: 20px
        padding: 5px 15px
        margin-bottom: 3px
        resize: none
        width: 100%
        font-size: 1em
        color: rgba(0,0,0,0.7)
        border: none
        background-color: transparent

#side
  margin-top: 35px
  .color-select
    margin-bottom: 5px
    .green.checkbox label
      color: green
    .blue.checkbox label
      color: blue
    .red.checkbox label
      color: red

#footer
  a
    text-decoration: none
  margin: 25px 0
  text-align: center
