@import 'nib'

body
  font-family: Helvetica, arial, freesans, clean, sans-serif
  line-height: 1.4
  background-color: #f2f2f2
  margin: 0

.ui.grid
  .column
    margin-top: 0

#main
  background-color: white
  padding: 0
  min-height: 1000px
  #header-menu
    border-radius: 0
    margin-bottom: 0
    input
      background-color: transparent
      border-color: #555555
      color: white
      font-size: 15px
    i
      color: white
  #project-desc
    margin: 20px 40px
    p
      font-size: 16px
      color: #333333
      margin: 0
  #new-item-input
    margin: 0 60px
    margin-bottom: 50px
    input
      border: none
      border-radius: 0
      border-bottom: 1px solid #aaaaaa
  #percentage
    line-height: 12px
    span.vote-color
      display: inline-block
  #list
    margin: 20px 30px
    padding-left: 30px
    padding-right: 30px
    font-size: 15px
    .row
      color: #666666
      .drag-anchor
        cursor: move
        text-align: right
      .icon
        margin: 4px 0
      input
        border: none
        padding: 0

#side
  margin-top: 35px

