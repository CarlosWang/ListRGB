@import 'nib'

body
  font-family: Helvetica, arial, freesans, clean, sans-serif
  line-height: 1.4
  background-color: #f2f2f2
  margin: 0

.ui.grid
  .column
    margin-top: 0

#main
  background-color: white
  height: 100%
  padding: 0
  #header-menu
    border-radius: 0
    margin-bottom: 0
  #projectDesc
    margin: 20px 40px
    font-size: 18px
    p
      margin: 0
  #new-item-input
    margin: 0 30px
    input
      border: 0
      border-radius: 0
      border-bottom: 1px solid #aaaaaa
  #percentage
    line-height: 9px
    span.vote-color
      display: inline-block
  #list
    margin: 10px 30px
    font-size: 15px
    color: #444444
    .item
      padding-top: 12px
      padding-bottom: 12px
      .itemTime
        color: gray

#side
  margin-top: 35px

